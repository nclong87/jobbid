<?php$baseUrl = $this->baseUrl();$actual_link = Core_Utils_Tools::getFullURL();?><div style="text-align:left">	<a href="<?php echo $baseUrl?>/admin">Back to admin tools</a>	<form action="" method="post">	<?php echo $this->html?>	<p>	<textarea cols="80" style="width:100%" rows="10" class="" id="email" name="email" placeholder="Emails..."></textarea></p>	<p>	<input type="submit" class="button" name="button" value="Search"/>	<input type="submit" class="button" name="button" value="Save"/>	</form>	<ul style="text-align: left; list-style: circle outside none;">		<?php 		foreach($this->list as $item) {			echo '<li data-ref=\''.json_encode($item).'\'>'.$item['id'].' - '.$item['email'].'<span class="remove">remove</span><span class="edit">edit</span></li>';		}		?>	</ul></div><script type="text/javascript">var tableName = 'emails';$(document).ready(function(){	 	$('input[placeholder], textarea[placeholder]').placeholder();	$("#email").focus();	//$("#email").click(function(){this.select()});	$("span.remove").live("click",function(){		var parent = $(this).parent();		var data_ref = $.parseJSON(parent.attr("data-ref"));		if(!confirm("Do you want remove '"+data_ref.email+"'")) return;		$.ajax({			type : "GET",			cache: false,			url: baseUrl +'/admin/remove',			data : {				t : tableName,				id : data_ref.id,				f : 2			},			success : function(data){					if(data=='ERROR') {					alert(ERROR_MESSAGE);					return;				}				if(data=='OK') {					parent.remove();					return;				}			},			error: function(data){ 				alert(ERROR_MESSAGE);			}					});	});	$("span.edit").live("click",function(){		var parent = $(this).parent();		var data_ref = $.parseJSON(parent.attr("data-ref"));		$.each(data_ref,function(key,value){			$("form #"+key).val(value);		});	});});</script>